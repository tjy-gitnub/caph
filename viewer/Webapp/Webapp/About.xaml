<ui:FluentWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:Webapp"
x:Class="Webapp.About"
mc:Ignorable="d"
xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
Height="425" Width="470"
MinHeight="350" MinWidth="450"
xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
Icon="/caph.ico"
Title="关于" WindowBackdropType="Mica" ExtendsContentIntoTitleBar="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ui:TitleBar Title="关于" ShowMaximize="False" ShowMinimize="False">
        </ui:TitleBar>
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <Image Source="/caph.ico" Height="100"/>
                <TextBlock Text="Caph" FontSize="25" TextAlignment="Center" Margin="0,8"/>
                <DockPanel HorizontalAlignment="Center" UseLayoutRounding="False" Margin="0,5">
                    <TextBlock VerticalAlignment="Center" >由</TextBlock>
                    <ui:HyperlinkButton VerticalAlignment="Center" Margin="5,0" NavigateUri="https://tjy-gitnub.github.io/" >星源</ui:HyperlinkButton>
                    <TextBlock VerticalAlignment="Center" >开发</TextBlock>
                </DockPanel>
                <TextBlock TextAlignment="Center" Margin="0,10">用于 Windows 的桌面 Copilot 助手的平替。</TextBlock>
                <ui:HyperlinkButton HorizontalAlignment="Center" Margin="0,10" Icon="Link20" NavigateUri="https://github.com/tjy-gitnub/caph">tjy-gitnub/caph</ui:HyperlinkButton>
                <DockPanel HorizontalAlignment="Center" Margin="0,10">
                    <TextBlock VerticalAlignment="Center">版本：</TextBlock>
                    <TextBlock x:Name="currentVer" VerticalAlignment="Center"></TextBlock>
                    <ui:Button Click="CheckUpdate" Margin="20,0,0,0">检查更新</ui:Button>
                </DockPanel>
                <ui:InfoBar x:Name="infoBar" IsClosable="False" Margin="20,10" MaxWidth="500"></ui:InfoBar>
                <ui:Card Margin="20,10" MaxWidth="500" x:Name="updateCard" Visibility="Collapsed">
                    <DockPanel>
                        <TextBlock x:Name="updateText" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Left">a</TextBlock>
                        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                            <ui:Button x:Name="viewUpdate" Click="ViewUpdate" Content="查看 Release 页"  VerticalAlignment="Center"/>
                            <ui:Button x:Name="updateBtn" Click="DownloadUpdate" Content="前往下载" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </DockPanel>
                    </DockPanel>
                </ui:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>

</ui:FluentWindow>